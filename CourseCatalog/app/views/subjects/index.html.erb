<%= render 'layouts/header' %>
<p id="notice"><%= notice %></p>

<h1>Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Official</th>
      <th>Term</th>
      <th>Abbreviation</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.date %></td>
        <td><%= subject.official_id %></td>
        <td><%= subject.term %></td>
        <td><%= subject.abbreviation %></td>
        <td><%= subject.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subject', new_subject_path %>
