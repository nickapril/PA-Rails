<%= render 'layouts/header' %>

<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>ID&#160;</th>
      <th>&#160;Comment</th>
      <th>Term</th>
      <th>&#160;Code</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.name %></td>
        <td><%= lesson.official_id %></td>
        <td><%= lesson.comment %></td>
        <td><%= lesson.term %></td>
        <td><%= lesson.code %></td>
        <td><%= lesson.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_lesson_path %>
